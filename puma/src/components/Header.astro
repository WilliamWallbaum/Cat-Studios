---
import '../styles/styles.css';
import Navigation from '../components/Navigation.astro'

const baseURL = import.meta.env.SITE
---

<header class="mast">
    <div class="site-title">
        <a href={baseURL}><h1>Site Name</h1></a>
    </div>
    <nav class="nav-links">
        <Navigation/>
    </nav>
</header>

<style>
    .mast {
    display: grid;
    grid-template-columns: 1fr 4fr;
    grid-template-areas: "site-title nav-links";
    background-color: oklch(0% 0 0 / 50%);
    }

    .site-title {
    grid-area: site-title;
    padding: calc(var(--global-s1) * .5);
    font-size: .75rem;
        & h1, a {
            text-decoration: none;
            color: var(--white);
            margin:0;
        }
    }

    .nav-links {
    grid-area: nav-links;
    justify-self: end;
    display: flex;
    flex-direction: row;
    padding: 0;
    margin: 0 var(--global-s3) 0 0 ;
    list-style: none;
    gap: 1rem;
        & .active {
        background-color: rgba(255, 255, 255, 0.2);
        }
    }

</style>