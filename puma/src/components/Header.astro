---
import '../styles/styles.css';
import Navigation from '../components/Navigation.astro'
---

<header class="mast">
    <div class="site-title">
        <h1>Site Name</h1>
    </div>
    <nav class="nav-links">
        <Navigation/>
    </nav>
</header>

<style>
    .mast {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-areas: "site-title nav-links";
    justify-items: center;
    align-items: stretch;
    background-color: var(--primary-color);
    }

    .site-title {
    grid-area: site-title;
    font-size: 1.5rem;
    }

    .site-title h1,
    .site-title a {
    color: var(--white);
    }

    .nav-links {
    grid-area: nav-links;
    display: flex;
    text-decoration: none;
    padding: 0;
    margin: 0;
    list-style: none;
    gap: 1rem;
    }

    .nav-links .active {
    background-color: rgba(255, 255, 255, 0.2);
    }

    .nav-links li {
    height: 100%;
    display: flex;
    align-items: center;
    }

    .nav-links li:hover {
    background-color: rgba(255, 255, 255, 0.3);
    }

</style>